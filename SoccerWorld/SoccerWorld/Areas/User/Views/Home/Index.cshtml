@{
    ViewBag.Title = "Home Page";
}
@if (Session["UserName"] == null)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
else if (Session["UserName"] != null)
{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
 @model List<SoccerWorld.Models.PhanLoai>

<div class="slide">
    <div id="carouselExampleControls" class="carousel slide carousel-fade h-75" data-ride="carousel"
         data-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="#">
                    <img src="https://shopbongda.vn/wp-content/uploads/2020/03/banner-website-NEMEZIZ-MESSI-1500x500-1.png"
                         class="d-block w-100" alt="...">
                </a>
            </div>

            <div class="carousel-item">
                <a href="#">
                    <img src="https://shopbongda.vn/wp-content/uploads/2020/03/banner-website-NEMEZIZ-MESSI-XANH-DẠ-QUANG-1500x500-1.png"
                         class="d-block w-100" alt="...">
                </a>
            </div>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- hinh trong silde -->
    <!-- thong bao -->
    <div class="notification">
        <div class="note">
            <div class="notice">
                <div class="notice-img-icon">

                </div>
                <div class="notice-title">
                    <h5>FREE SHIP TOÀN QUỐC</h5>
                    <h6>Miễn phí giao hàng tận nhà trên toàn quốc cho tất cả các khách hàng</h6>
                </div>
            </div>
            <div class="notice">
                <div class="notice-img-icon">

                </div>
                <div class="notice-title">
                    <h5>BẢO HÀNH 3 THÁNG</h5>
                    <h6>Quý khách được bảo hành đổi mẫu mới 100% nếu bị lỗi trong vòng 90 ngày.</h6>

                </div>
            </div>
            <div class="notice">
                <div class="notice-img-icon">
                    <img src="images/original-white.png" alt="ship">
                </div>
                <div class="notice-title">
                    <h5>CHẤT LƯỢNG 100%</h5>
                    <h6>Cam kết chất lượng 100% của các sản phẩm</h6>
                </div>
            </div>
        </div>
    </div>
    <!-- thong bao -->
</div>
<!-- silde end -->
<!-- container start -->
<div class="container container-fluid">

    <!-- san pham giay bong da  -->
    @foreach (var x in Model)
    {
    <div class="fields">
        <a href="#" class="h3 font-italic font-weight-bold text-danger">
            @x.TenPhanLoai
        </a><hr />
        <div class="row text-transform" >
            <!-- khung hinh giay bong da -->

            @Html.Action("GetCardInfo", new {  id = x.IDPhanLoai, no = 5 })
  

        </div>
     </div> 
     }<!-- container end -->
</div>
<div class="contact d-flex justify-content-center align-items-center mt-3 ">
    <div class="contact-info d-flex justify-content-center align-items-center flex-column p-5 text-danger ">
        <h2 style="font-weight: 700;">nhận tư vấn miễn phí</h2>
        <p>Quý khách đừng ngần ngại liên hệ với Shop để nhận được tư vấn miễn phí khi mua hàng.</p>
        <input class="btn btn-primary" type="button" value="Hotline 090000001">
    </div>
</div>