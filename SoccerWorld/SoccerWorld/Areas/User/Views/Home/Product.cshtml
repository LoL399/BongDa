
@{
    ViewBag.Title = "Product";

}
@if (Session["UserName"] == null)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
else if (Session["UserName"] != null)
{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
 @model SoccerWorld.Models.SanPham


<h2>Product</h2>

<div class="shoptop mt-4 mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Trang Chủ</a></li>
            <li class="breadcrumb-item"><a href="shop.html">Shop</a></li>
            <li class="breadcrumb-item"><a href="ao-bong-da.html">@ViewBag.PhanLoai</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TenSanpham</li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12 col-sm-7 chi-tiet-san-pham">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @Html.Action("GetImg", new { id = Model.ID })
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="col-12 col-sm-5">
        <div class="h3 mb-2">
            @Model.TenSanpham
        </div>
        <div class="h4 mb-5">
            Giá Tiền : <p class="text-primary d-inline">@Model.Gia </p>  vnd
        </div>

        <form class="form-inline mb-5">
            <select class="form-control ml-2 mt-2 " id="size">
                <option>Chọn Size</option>
                @Html.Action("GetSize", new { id = Model.ID })

            </select>
            <select class="form-control ml-2 mt-2" id="size">
                <option>Chọn màu</option>
                @Html.Action("GetMau", new { id = Model.ID})
            </select>
            @if (Session["User"] == null)
            {
                <a class="btn btn-danger ml-2 mt-2 text-white" data-toggle="modal" data-target="#exampleModal">Thêm vào giỏ hàng</a>
            }
            else
            {
                <button type="submit" class="btn btn-danger ml-2 mt-2">Thêm vào giỏ hàng</button>
            }

        </form>
        <ul class="nav nav-tabs mt-5" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="mota-tab" data-toggle="tab" href="#mota" role="tab" aria-controls="mota" aria-selected="true">Mô tả</a>
            </li>

        </ul>
        <div class="tab-content mt-2" id="myTabContent">

            @if (Model.MoTa == null)
            {
                <div class="tab-pane fade show active" id="mota" role="tabpanel" aria-labelledby="mota-tab">
                    Không có thông tin
                </div>

            }
            else
            {
                <div class="tab-pane fade show active" id="mota" role="tabpanel" aria-labelledby="mota-tab">
                    @Model.MoTa.ToString()
                </div>
            }



        </div>






    </div>
    <div class="btn btn-primary w-100 mt-5 mb-5">HOTLINE  090000000</div>
</div>
